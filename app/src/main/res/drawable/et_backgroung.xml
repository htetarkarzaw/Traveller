<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:startColor="#d7d7d7"
                android:endColor="#d9d9d9"/>
            <corners android:radius="10dp"/>

            <padding android:bottom="20dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:startColor="#fff"
                android:endColor="#fff"/>
            <corners android:radius="10dp"/>

            <padding android:bottom="20dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape>
    </item>
</selector>