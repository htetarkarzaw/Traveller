<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <and.htetarkarzaw.tuntravel.Custom_fonts.MyTextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Passenger"
            android:textColor="#6a7987"
            android:textSize="30dp" />

        <and.htetarkarzaw.tuntravel.Custom_fonts.MyEditText

            android:id="@+id/passengerName"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"
            android:background="@drawable/button_add"
            android:hint="Passenger Name"
            android:padding="10dp"
            android:stateListAnimator="@anim/button_state_list_anim_two"
            android:textColorHint="#6a7987"
            android:textSize="15dp" />

        <and.htetarkarzaw.tuntravel.Custom_fonts.MyEditText
            android:id="@+id/passengerNRC"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:background="@drawable/button_add"
            android:hint="Passenger NRC"
            android:padding="10dp"
            android:stateListAnimator="@anim/button_state_list_anim_two"
            android:textColorHint="#6a7987"
            android:textSize="15dp" />

        <and.htetarkarzaw.tuntravel.Custom_fonts.MyEditText
            android:id="@+id/passengerPhno"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/button_add"
            android:hint="Passenger Ph No."
            android:padding="10dp"
            android:stateListAnimator="@anim/button_state_list_anim_two"
            android:textColorHint="#6a7987"
            android:textSize="15dp" />

        <and.htetarkarzaw.tuntravel.Custom_fonts.MyEditText
            android:id="@+id/passengerRemark"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_add"
            android:hint="Remark"
            android:padding="10dp"
            android:stateListAnimator="@anim/button_state_list_anim_two"
            android:textColorHint="#6a7987"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <and.htetarkarzaw.tuntravel.Custom_fonts.MyButton
                android:id="@+id/passengerSave"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/all_button"
                android:stateListAnimator="@anim/button_state_list_anim_two"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#6a7987" />

            <and.htetarkarzaw.tuntravel.Custom_fonts.MyButton
                android:id="@+id/passengerDelete"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/all_button"
                android:stateListAnimator="@anim/button_state_list_anim_two"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#6a7987" />

            <and.htetarkarzaw.tuntravel.Custom_fonts.MyButton
                android:id="@+id/passengerCancel"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/all_button"
                android:stateListAnimator="@anim/button_state_list_anim_two"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#6a7987" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>